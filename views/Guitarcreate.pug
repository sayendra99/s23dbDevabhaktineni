extends layout

block content
  h1= title
  form(id='GuitarForm', action="/resource/Guitars", method="POST")
    div.form-group
      label.GuitarAttr(for='type') type
      input#type(type='text', name='type')
    div.form-group
      label.GuitarAttr(for='material') material
      input#material(type='text', name='material')
    div.form-group
      label.GuitarAttr(for='cost') cost
      input#cost(type='number', name='cost')
    input(type="submit")

  script.
    document.forms['GuitarForm'].addEventListener('submit', (event) => {
      event.preventDefault();
      // TODO do something here to show the user that the form is being submitted
      fetch(event.target.action, {
        method: 'POST',
        body: new URLSearchParams(new FormData(event.target)), // event.target is the form
      })
        .then((resp) => {
          return resp.json(); // or resp.text() or whatever the server sends
        })
        .then((body) => {
          alert("Save succeeded");
          // TODO handle body
        })
        .catch((error) => {
          // TODO handle error
          alert("Save failed " + error);
        });
    });